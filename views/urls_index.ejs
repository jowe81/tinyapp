<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/_meta_and_link') %>
    <title>URL List - TinyApp</title>
  </head>
  <body>
    <%- include('partials/_header') %>
    <main style="margin: 1em;">
      <h3>My URLs</h3>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Full URL</th>
            <th scope="col">Short URL (click&nbsp;to&nbsp;visit)</th>
            <th scope="col"></th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% for(let url in urls) { %>
            <tr>
              <td><%= urls[url].longURL %></td>
              <td><a href="/urls/<%= url %>"><%= url %></a></td>
              <td>
                <form method="POST" action="/urls/<%= url %>/delete?_method=DELETE">
                  <button class="btn btn-danger">Delete</button>
                </form>
              </td>
              <td>
                  <!-- Changed this from <button> to <a>, because the form for some reason would lose the querystring -->
                  <a href="/urls/<%= url %>?edit=true" class="btn btn-primary">Edit</a>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </main>
    <%- include('partials/_scripts') %>
  </body>
</html>