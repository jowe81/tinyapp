<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/_meta_and_link') %>
    <title>URL List - TinyApp</title>
  </head>
  <body>
    <%- include('partials/_header') %>
    <main style="margin: 1em;">
      <h3>My URLs</h3>
      <a href="urls/new">Shorten a new URL</a>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Short URL</th>
            <th scope="col">Long URL</th>
            <th scope="col">Delete</th>
            <th scope="col">Edit</th>
          </tr>
        </thead>
        <tbody>
          <% for(let url in urls) { %>
            <tr>
              <td><a href="/urls/<%= url %>"><%= url %></a></td>
              <td><%= urls[url].longURL %></td>
              <td>
                <form method="POST" action="/urls/<%= url %>/delete">
                  <button class="btn btn-danger">Delete</button>
                </form>
              </td>
              <td>
                <form method="GET" action="/urls/<%= url %>">
                  <button class="btn btn-primary">Edit</button>
                </form>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </main>
    <%- include('partials/_scripts') %>
  </body>
</html>