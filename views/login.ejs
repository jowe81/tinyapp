<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/_meta_and_link') %>
    <title>Login - TinyApp</title>
  </head>
  <body>
    <%- include('partials/_header') %>
    <main style="margin: 1em;">
      <h3>Login to TinyApp</h3>
      <form class="form-inline" action="/login" method="POST">
        <div class="form-group mb-2">
          <label for="email">Email address:</label>
          <input class="form-control" type="email" id="email" name="email" placeholder="" style="width: 300px; margin: 1em">
        </div>
        <div class="form-group mb-2">
          <label for="email">Password:</label>
          <input class="form-control" type="password" name="password" placeholder="" style="width: 300px; margin: 1em">
        </div>
        <div class="form-group mb-2">
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </form>
    </main>
    <%- include('partials/_scripts') %>
    <script>
      $("#email").focus();
    </script>
  </body>
</html>